{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "sourceMap": false,
    "allowJs": true,
    "strictNullChecks": true,
    "outDir": "./lib",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true
  },
  "include": [
    "./src/**/*.d.ts",
    "./src/**/*.ts",
    "./src/**/*.js",
    "./src/**/node_modules"
  ],
  "compileOnSave": false
}
